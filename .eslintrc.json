{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": "airbnb",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "linebreak-style": 0,
        "no-console": ["error", {
            "allow": ["log", "warn", "error"]
        }],
        "no-underscore-dangle": [2, { "allow": ["_this", "_update", "_id"] }],
        "indent": [2, "tab"],
        "no-tabs": 0,
        "func-names": ["error", "never"],
        "comma-dangle": ["error", "never"],
        "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
        "no-await-in-loop": 0
    }
}
